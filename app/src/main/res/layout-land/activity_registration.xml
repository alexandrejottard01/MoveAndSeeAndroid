<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightBlue">

    <EditText
        android:id="@+id/pseudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="false"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/colorDarkBlue"
        android:hint="@string/pseudo"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColorHint="@color/colorLightGrayBlue" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pseudo"
        android:layout_centerHorizontal="false"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="3dp"
        android:backgroundTint="@color/colorDarkBlue"
        android:hint="@string/mail"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColorHint="@color/colorLightGrayBlue" />


    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pseudo"
        android:layout_alignStart="@+id/pseudo"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="false"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="3dp"
        android:backgroundTint="@color/colorDarkBlue"
        android:hint="@string/mot_de_passe"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColorHint="@color/colorLightGrayBlue" />

    <EditText
        android:id="@+id/confirmation_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pseudo"
        android:layout_alignStart="@+id/pseudo"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="false"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="3dp"
        android:backgroundTint="@color/colorDarkBlue"
        android:hint="@string/confirmation_password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColorHint="@color/colorLightGrayBlue" />

    <Button
        android:id="@+id/register"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmation_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal|center"
        android:text="@string/button_register" />



</RelativeLayout>