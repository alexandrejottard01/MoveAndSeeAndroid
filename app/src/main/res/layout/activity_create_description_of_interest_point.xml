<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAE2EA">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/address_interest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_interest"
            android:layout_centerHorizontal="true"
            android:textColor="#072F56"/>

        <TextView
            android:id="@+id/name_interest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/select_point"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#072F56"/>

        <TextView
            android:id="@+id/average_interest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_interest"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="#072F56"/>

        <EditText
            android:id="@+id/explication_interest"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/average_interest"
            android:layout_margin="10dp"
            android:background="@drawable/border_add_description"
            android:ems="10"
            android:gravity="top"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button_submit_description"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/explication_interest"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/design_button"
            android:text="@string/button_submit"
            android:textColor="@android:color/white"
            android:textSize="10sp" />


    </RelativeLayout>

</LinearLayout>

